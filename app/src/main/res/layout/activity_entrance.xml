<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.monster.toolbarhelper.toolview.ToolView
        android:id="@+id/tool_entrance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:navShow="gone"
        app:navIcon="@null"
        app:toolTitle="EntranceActivity" />

    <TextView
        android:id="@+id/tv_entrance_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="50dp"
        android:text="@string/hint_entrance_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_entrance" />

    <Button
        android:id="@+id/btn_entrance_nav"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:padding="10dp"
        android:text="进入 NavigationActivity"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_entrance" />

</androidx.constraintlayout.widget.ConstraintLayout>