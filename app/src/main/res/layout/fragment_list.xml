<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ListFragment">

    <ListView
        android:id="@+id/lv_list_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_list_entrance"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="单独使用 ToolView"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_list_custom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lv_list_menu" />

    <Button
        android:id="@+id/btn_list_custom"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="自定义 ToolBar"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_list_entrance"
        app:layout_constraintTop_toBottomOf="@id/lv_list_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>