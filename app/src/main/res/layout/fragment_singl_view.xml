<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.monster.toolbarhelper.view.ToolView
        android:id="@+id/tool_single_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:menuImg="@drawable/ic_arrow_back_black_24dp"
        app:menuText="点我"
        app:navIcon="@drawable/ic_send_black_24dp"
        app:toolTitle="单独使用页面" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="当前页面是用来演示单独使用 ToolView，可设置属性包含：\ntoolTitle、menuText、menuImg、navIcon、navShow"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_single_tool" />

</androidx.constraintlayout.widget.ConstraintLayout>