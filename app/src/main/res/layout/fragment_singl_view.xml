<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <me.monster.toolbarhelper.toolview.ToolView
        android:id="@+id/tool_single_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:menuImg="@drawable/ic_arrow_back_black_24dp"
        app:menuText="点我"
        app:navIcon="@drawable/ic_send_black_24dp"
        app:navShow="gone"
        app:toolTitle="单独使用页面" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:lineSpacingMultiplier="1.3"
        android:text="当前页面是用来演示单独使用 ToolView，可设置属性包含：\ntoolTitle、menuText、menuImg、navIcon、navShow"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_single_tool" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_single_setTitleSize"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="设置标题字体为 22" />

        <Button
            android:id="@+id/btn_single_setTitleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置标题文字颜色为红色" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_single_setMenuSize"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="设置菜单字体为 16" />

        <Button
            android:id="@+id/btn_single_setMenuColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置菜单文字颜色为红色" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_single_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置" />

</LinearLayout>